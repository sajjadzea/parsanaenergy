{
  "name": "parsanaenergy-root",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "eslint \"docs/**/*.{js,jsx,ts,tsx}\" \"decision-tree-app/**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "build:widget": "pnpm --filter decision-tree-app run build-widget",
    "build:site": "pnpm --filter docs run build",
    "deploy": "pnpm run build:widget && pnpm run build:site && node scripts/update-html-hashes.js docs/dist docs docs/public/articles docs/public/blog docs/catalog docs/services docs/widget && rm -rf docs/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "terser": "^5.43.1"
  },
  "engines": {
    "node": ">=18 <20"
  }
}
